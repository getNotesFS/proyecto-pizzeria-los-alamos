          li.active(data-target="#carouselExampleIndicators" data-slide-to="0")
          li(data-target="#carouselExampleIndicators" data-slide-to="1")
          li(data-target="#carouselExampleIndicators" data-slide-to="2")
        .carousel-inner
          .carousel-item.active
            .slidee1
            //
              <img class="d-block w-100" src="images/pizzaDouble.jpg" alt="First slide">
            .carousel-caption.d-md-block.contenidoSlider
              h5 SLIDE 1
              p textoooooooo
              .actualizarListado.pt-3.d-flex.justify-content-center
