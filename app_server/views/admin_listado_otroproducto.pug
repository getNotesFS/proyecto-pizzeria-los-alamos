
extends admin_layout

block content

    // AQUÍ ESTÁ EL CONTENIDO DE CADA PÁGINA
    main.col-md-9.ml-sm-auto.col-lg-10.pt-3.px-4(role="main")
      .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pb-2.mb-3.border-bottom
        h1= title
      // AQUÍ VA OTRAS COSAS QUE SE NECESITE EN LA CABECERA DEL DASHBOARD
      .table-responsive.tablaIngredientes
        table.table.table-striped.table-sm
          thead
            tr
              th #
              th Nombre
              th Tipo
              th Descripcion
              th Cantidad
              th Precio
          tbody
          - var pos=1
            each element in otroProductoList
              tr
                td.idOtroProducto= pos++
                td.nombreOT= element.Nombre
                td.tipoOT= element.Tipo
                td.descripcionOT= element.Descripcion
                td.precioOT= element.Precio
                td.crudOtroProducto
                  //a.btn.btn-primary.ml-1.btn-sm#updateIngredente(href=`/admin/editar-otroproducto/${element._id}` data-id=`${element._id}` data-toggle="modal" data-target="#modalEditarOtroProducto") Editar
                  a.btn.btn-primary.ml-1.btn-sm#updateOtroProducto(href=`/admin/editar-otroproducto/${element._id}` data-id=`${element._id}` ) Editar
                  button.btn.btn-danger.ml-1.btn-sm#deleteOtroProducto(data-id=`${element._id}` onClick=`removeOT('${element._id}')`) Eliminar
 

        // Modal
        #modalEditarOtroProducto.modal.fade(tabindex="-1" role="dialog" aria-labelledby="modalEditarOtroProducto" aria-hidden="true")
          .modal-dialog.modal-dialog-centered.modal-lg(role="document")
            .modal-content
              .modal-header
                h5#exampleModalLongTitle.modal-title Editar
                button.close(type="button" data-dismiss="modal" aria-label="Close")
                  span(aria-hidden="true") ×
              .modal-body
                .row.p-3.justify-content-center
                  .col-md-10
                    form(method="POST" action="" role="form")
                      .form-group
                        label(for="nombre") Nombre
                        input.form-control(type="text" name="nombre" value=`${nombre}`)
                      .form-group
                        label(for="tipo") Tipo
                        input.form-control(type="text" name="tipo" value=`${tipo}`)
                      .form-group
                        label(for="tipo") Stock
                        input.form-control(type="text" name="tipo" value=`${tipo}`)
                      .form-group
                        label(for="descripcion") Descripcion
                        input.form-control(type="text" name="descripcion" value=`${descripcion}`)
                      .form-group
                        label(for="cantidad") Cantidad
                        input.form-control(type="text" name="cantidad" value=`${cantidad}`)
                      .form-group
                        label(for="precio") Precio
                        input.form-control(type="text" name="precio" required="" value=`${precio}`)
                      button.btn.btn-primary(type="submit") Actualizar OtroProducto